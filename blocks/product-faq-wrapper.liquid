{% assign product_faqs = product.metafields.custom.product_faq %}

{% if product_faqs %}
  <div class="product-faqs">
    <h2>Product FAQs</h2>
    {% for faq in product_faqs %}
      <div class="faq-item">
        <p>
          <strong>Question #{{ faq.fields.question_number }}</strong>
        </p>
        <p>
          <strong>Q: {{ faq.fields.question }}</strong>
        </p>
        <p>
          <strong>A: {{ faq.fields.answer }}</strong>
        </p>
      </div>
    {% endfor %}
  </div>
{% else %}
  <p>No FAQs available for this product.</p>
{% endif %}

{% schema %} {"name":"Product FAQ Wrapper"} {% endschema %}
